{
    "name": "Vitas",
    "version": "0.1",
    "manifest_version": 2,
    "description": "A download manager.",
    "icons": {
        "128": "res/icon.png"
    },
    "background": {
        "scripts": [
            "common/common.js",
            "storage/storage.js",
            "download/download.js",
            "vitas.js",
            "main.js"
        ],
        "persistent": false
    },
    "permissions": [
        "http://*.google.com/",
        "https://*.google.com/",
        "storage",
        "downloads"
    ],
    "browser_action": {
        "default_title": "Vitas",
        "default_icon": "res/icon.png",
        "default_popup": "popup.html"
    }
}